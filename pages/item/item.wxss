.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 60rpx;
  height: 60rpx;
}

.consumption-patterns-item-text {
  margin-top: 20rpx;
  font-size: 25rpx;
}

.calculator {
  /* position: absolute; *//* bottom: 0; */
  width: 100%;
  z-index: 999;
  display: flex;
}

.calculator-number {
  flex: 3;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
  box-sizing: border-box;
}

.number {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  border: 1rpx solid lightgray;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.number-hover {
  background-color: lightgray;
}

.calculator-operation {
  flex: 1;
  display: flex;
  flex-direction: column;
}
